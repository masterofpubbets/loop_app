-- Step 1
ALTER TABLE tblEleCableProduction
ADD CableId INT NULL
GO

-- Step 2
UPDATE V
    SET CableId = TBL_ID
FROM (
    SELECT
    TBL_ID, tblEleCableProduction.Pro_ID,tblEleCableProduction.CableId
    FROM tblEleCableList
    INNER JOIN tblEleCableProduction ON tblEleCableList.EC_ID = tblEleCableProduction.Tag
) AS V
GO


-- Step 4
ALTER TABLE tblEleCableProduction
    DROP CONSTRAINT FK_tblEleCableProduction_ecid
GO


-- Step 5
ALTER TABLE dbo.tblEleCableProduction
   ADD CONSTRAINT FK_EleCableProduction_EleCable_Tag FOREIGN KEY (CableId)
      REFERENCES dbo.tblEleCableList (TBL_ID)
      ON DELETE CASCADE
      ON UPDATE CASCADE
GO

-- Step 6
ALTER TABLE dbo.tblEleCableProduction
    DROP COLUMN Tag
GO
