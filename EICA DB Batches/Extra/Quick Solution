--Quick Solution

DECLARE @ConsName NVARCHAR(MAX)
SELECT @ConsName =  CONSTRAINT_NAME FROM INFORMATION_SCHEMA.TABLE_CONSTRAINTS WHERE TABLE_NAME='tblEleCableProduction' AND CONSTRAINT_TYPE = 'FOREIGN KEY'

IF @ConsName IS NOT NULL
EXECUTE ('
ALTER TABLE tblEleCableProduction
    DROP CONSTRAINT ' + @ConsName
)

ALTER TABLE tblEleCableProduction
ALTER COLUMN Tag NVARCHAR(250);
GO

ALTER TABLE tblEleCableList
ALTER COLUMN EC_ID NVARCHAR(250);
GO

ALTER TABLE dbo.tblEleCableProduction
   ADD CONSTRAINT FK_EleCableProduction_EleCable_Tag FOREIGN KEY (Tag)
      REFERENCES dbo.tblEleCableList (EC_ID)
      ON DELETE CASCADE
      ON UPDATE CASCADE
GO
